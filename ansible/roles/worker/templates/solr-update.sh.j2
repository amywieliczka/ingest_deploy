#!/bin/bash

if [[ -n "$DEBUG" ]]; then 
  set -x
fi

set -o pipefail  # trace ERR through pipes
set -o errtrace  # trace ERR through 'time command' and other functions
set -o nounset   ## set -u : exit the script if you try to use an uninitialised variable
set -o errexit   ## set -e : exit the script if any statement returns a non-true return value

DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )" # http://stackoverflow.com/questions/59895
cd $DIR

usage(){
    ./beanstalk-describe.sh ucldc-solr
    echo "deploy-version.sh version-label environment-name"
    exit 1
}

if [ $# -ne 2 ];
  then
    usage
fi

. ~/.harvester-env

set +o nounset
. {{ dir_venv }}/bin/activate
set -o nounset

dt=`date '+%Y%m%d_%H%M%S'`

stdbuf -i0 -o0 -e0 python {{ dir_code }}/harvester/harvester/{{ run_dir_solr }}r.py \
  $COUCHDB_URL ucldc $URL_SOLR $@ \
  &> {{ dir_run }}/{{ run_dir_solr }}/log/solr-up-${dt}.out &

disown
